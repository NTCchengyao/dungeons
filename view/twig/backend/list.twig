{% extends 'backend/content-wrapper.twig' %}

{% block content %}
    {% if result.controls %}
        <div class="card">
            <div class="card-body p-1">
                {% for item in result.controls %}
                    <a class="btn {{ item.class }} m-1" data-ajax href="{{ item.path }}">
                        <i class="{{ item.icon }}"></i>
                        {{ item.label }}
                    </a>
                {% endfor %}
            </div>
        </div>
    {% endif %}
    <div class="card card-tabs">
        <div class="card-body p-2">
            <table class="table table-hover table-responsive table-striped">
                <thead>
                    <tr>
                        <th class="w-1">#</th>
                        {% if result.operations %}
                            <th class="w-1">{{ i18n('backend.operation') }}</th>
                        {% endif %}
                        {% for style in result.styles %}
                            <th>{{ style.label }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% set num = (result.page - 1) * result.size %}
                    {% for data in result.data %}
                        <tr>
                            <td>{{ num + loop.index }}</td>
                            {% if result.operations %}
                                <td>
                                    {% for op in result.operations %}
                                        {% if op.method %}
                                            <button class="btn {{ op.class }}" data-ajax="{{ result.path }}/{{ op.method }}/{{ data.id }}" title="{{ op.label }}">
                                                <i class="{{ op.icon }}"></i>
                                            </button>
                                        {% else %}
                                            <a class="btn {{ op.class }}" data-ajax href="{{ result.path }}/{{ data.id }}" title="{{ op.label }}">
                                                <i class="{{ op.icon }}"></i>
                                            </a>
                                        {% endif %}
                                    {% endfor %}
                                </td>
                            {% endif %}
                            {% for style in result.styles %}
                                <td>
                                    {% include 'backend/component/' ~ style.type ~ '.twig' with {'data': data, 'path': result.path, 'style': style} only %}
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    {% if not result.data %}
                        <tr><td class="text-center" colspan="{{ result.operations|length + result.styles|length + 1 }}">{{ i18n('error.DataNotFound') }}</td></tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
        <div class="card-footer clearfix">
            {% if result.count > result.size %}
                <ul class="float-right m-0 pagination">
                    {% set max = (result.count / result.size) | round(0, 'ceil') %}
                    {% if result.page > 1 %}
                        {{ _self.pager(result, form, -1, '&laquo;') }}
                    {% endif %}
                    {% for num in 3..1 %}
                        {% if result.page > num %}
                            {{ _self.pager(result, form, -num) }}
                        {% endif %}
                    {% endfor %}
                    {{ _self.pager(result, form, 0) }}
                    {% for num in 1..3 %}
                        {% if result.page + num <= max %}
                            {{ _self.pager(result, form, num) }}
                        {% endif %}
                    {% endfor %}
                    {% if result.page < max %}
                        {{ _self.pager(result, form, 1, '&raquo;') }}
                    {% endif %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% macro pager(data, args, diff, label) %}
    {% set page = data.page + diff %}
    {% if page == 1 %}
        {% set path = build(data.path, args, null, ['p']) %}
    {% else %}
        {% set path = build(data.path, args, {p: page}) %}
    {% endif %}
    <li class="page-item{% if not diff %} active{% endif %}"><a class="page-link" data-ajax href="{{ path }}">{{ label | default(page) | raw }}</a></li>
{% endmacro %}
