{% extends 'backend/content-wrapper.twig' %}

{% set breadcrumbs, description, title = result.breadcrumbs, result.sub_title, controller.menu().title %}

{% block header %}
    {% include 'backend/header.twig' %}
{% endblock %}

{% block content %}
    {% set selectable = false %}
    {% if result.controls %}
        <div class="card">
            <div class="card-body p-1">
                {% for item in result.controls %}
                    {% if item.method %}
                        {% set selectable = random() + 1 %}
                        <button class="btn {{ item.class }} m-1" data-ajax="{{ controller.node }}/{{ item.method }}" data-least="{{ item.least }}"{% if item.least %} disabled{% endif %}>
                            <i class="{{ item.icon }}"></i>
                            {{ item.label }}
                        </button>
                    {% else %}
                        <a class="btn {{ item.class }} m-1" data-ajax href="{{ item.path }}">
                            <i class="{{ item.icon }}"></i>
                            {{ item.label }}
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    {% endif %}
    <div class="card card-tabs">
        <div class="card-body p-2">
            <table class="table table-hover table-responsive table-striped">
                <thead>
                    <tr>
                        <th class="w-1">#</th>
                        {% if selectable %}
                            <th class="w-1">
                                <div class="icheck-navy d-inline">
                                    <input data-all id="_{{ selectable }}" type="checkbox"><label for="_{{ selectable }}"></label>
                                </div>
                            </th>
                        {% endif %}
                        {% if result.actions %}
                            <th class="w-1">{{ i18n('backend.operation') }}</th>
                        {% endif %}
                        {% for style in result.styles %}
                            <th>
                                {% if style.unordered %}
                                    {{ style.label }}
                                {% else %}
                                    {% if not result.orders[style.name] %}
                                        {% set icon, order = 'fas fa-sort', style.name %}
                                    {% elseif result.orders[style.name] > 0 %}
                                        {% set icon, order = 'fas fa-sort-up', '-' ~ style.name %}
                                    {% else %}
                                        {% set icon, order = 'fas fa-sort-down', null %}
                                    {% endif %}
                                    <a data-ajax href="{{ build(result.path, result.parameters, {o: order}) }}">{{ style.label }}<i class="{{ icon }} ml-2"></i></a>
                                {% endif %}
                            </th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% set num = (result.page - 1) * result.size %}
                    {% for data in result.data %}
                        <tr>
                            <td>{{ num + loop.index }}</td>
                            {% if selectable %}
                                <td>
                                    <div class="icheck-navy d-inline">
                                        <input data-id="{{ data.id }}" id="_{{ selectable }}_{{ data.id }}" type="checkbox"><label for="_{{ selectable }}_{{ data.id }}"></label>
                                    </div>
                                </td>
                            {% endif %}
                            {% if result.actions %}
                                <td>
                                    {% for action in result.actions %}
                                        {% if action.method %}
                                            <button class="btn {{ action.class }}" data-ajax="{{ controller.node }}/{{ action.method }}/{{ data.id }}" title="{{ action.label }}">
                                                <i class="{{ action.icon }}"></i>
                                            </button>
                                        {% else %}
                                            <a class="btn {{ action.class }}" data-ajax href="{{ controller.node }}/{{ data.id }}" title="{{ action.label }}">
                                                <i class="{{ action.icon }}"></i>
                                            </a>
                                        {% endif %}
                                    {% endfor %}
                                </td>
                            {% endif %}
                            {% for style in result.styles %}
                                <td>
                                    {% include 'backend/component/' ~ style.type ~ '.twig' with {'controller': controller, 'data': data, 'style': style} only %}
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    {% if not result.data %}
                        <tr><td class="text-center" colspan="{{ result.actions|length + result.styles|length + 1 }}">{{ i18n('error.DataNotFound') }}</td></tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
        {% if result.count > result.size %}
            <div class="card-footer">
                <ul class="float-right m-0 pagination">
                    {% set max = (result.count / result.size) | round(0, 'ceil') %}
                    {% if result.page > 1 %}
                        {{ _self.pager(result, -1, '&laquo;') }}
                    {% endif %}
                    {% for num in 3..1 %}
                        {% if result.page > num %}
                            {{ _self.pager(result, -num) }}
                        {% endif %}
                    {% endfor %}
                    {{ _self.pager(result, 0) }}
                    {% for num in 1..3 %}
                        {% if result.page + num <= max %}
                            {{ _self.pager(result, num) }}
                        {% endif %}
                    {% endfor %}
                    {% if result.page < max %}
                        {{ _self.pager(result, 1, '&raquo;') }}
                    {% endif %}
                </ul>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% macro pager(data, diff, label) %}
    {% set page = data.page + diff %}
    {% if page == 1 %}
        {% set path = build(data.path, data.parameters, null, ['p']) %}
    {% else %}
        {% set path = build(data.path, data.parameters, {p: page}) %}
    {% endif %}
    <li class="page-item{% if not diff %} active{% endif %}"><a class="page-link" data-ajax href="{{ path }}">{{ label | default(page) | raw }}</a></li>
{% endmacro %}
